extends layout

block content
  h1= title

  form(method='POST' action='')
    div.form-group
      label(for='title') Category Name:
      input#title.form-control(type='text', placeholder='Category name' name='title' required='true' value=(category===undefined ? '' : category.title))
    div.form-group
      label(for='description') Description:
      textarea#summary.form-control(type='textarea', placeholder='Description' name='description' required='true') #{category===undefined ? '' : category.description}
    
    
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
